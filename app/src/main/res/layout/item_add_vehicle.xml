<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/common_large_margin"
    android:layout_marginHorizontal="@dimen/common_small_margin"
    app:cardElevation="@dimen/common_card_elevation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemAddVehiclesContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/common_small_padding"
        android:background="@drawable/selector_item_selected">

        <ImageView
            android:id="@+id/itemAddVehiclesImage"
            android:layout_width="@dimen/common_image_size"
            android:layout_height="@dimen/common_image_size"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@drawable/ic_car" />

        <TextView
            android:id="@+id/itemAddVehiclesName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/itemAddVehiclesImage"
            app:layout_constraintBottom_toBottomOf="@id/itemAddVehiclesImage"
            app:layout_constraintStart_toEndOf="@id/itemAddVehiclesImage"
            tools:text="Tesla"
            android:layout_marginStart="@dimen/common_small_margin"
            style="@style/CycleRegularTextStyle"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemAddVehiclesModel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/itemAddVehiclesImage"
            app:layout_constraintBottom_toBottomOf="@id/itemAddVehiclesImage"
            app:layout_constraintStart_toEndOf="@id/itemAddVehiclesName"
            tools:text="Y"
            android:layout_marginHorizontal="4dp"
            style="@style/CycleRegularTextStyle"
            />

<!--        <CheckBox-->
<!--            android:id="@+id/itemAddVehicleCheckbox"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            android:buttonTint="@color/primary_blue"-->
<!--            android:checked="false"/>-->

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>